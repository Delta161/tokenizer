{
  "name": "tokenizer-backend",
  "version": "1.0.0",
  "description": "Backend for Tokenizer real estate tokenization platform",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {

    "dev": "tsx src/server.ts",

    "start": "node --import ./tsconfig-paths-bootstrap.js dist/src/server.js",

    "dev:old": "node server.js",

    "start:old": "node server.js",

    "build": "tsc",

    "seed": "ts-node --transpile-only --require tsconfig-paths/register prisma/seed.ts",

    "test": "vitest run",

    "test:watch": "vitest",

    "test:coverage": "vitest run --coverage",

    "lint": "eslint src/**/*.ts --format friendly",

    "lint:fix": "eslint src/**/*.ts --fix --format friendly",

    "lint:check": "eslint src/**/*.ts --max-warnings 0 --format friendly"

  },

  "dependencies": {

    "@prisma/client": "^6.11.1",

    "@quixo3/prisma-session-store": "^3.1.13",

    "@types/cookie-parser": "^1.4.9",

    "@types/express-session": "^1.18.2",

    "@types/pino": "^7.0.4",

    "compression": "^1.8.1",

    "cookie-parser": "^1.4.7",

    "cors": "^2.8.5",

    "dompurify": "^3.2.6",

    "dotenv": "^17.2.0",

    "ethers": "^6.15.0",

    "express": "^5.1.0",

    "express-rate-limit": "^8.0.1",

    "express-session": "^1.18.2",

    "express-validator": "^7.2.1",

    "hardhat": "^2.26.0",

    "helmet": "^8.1.0",

    "http-errors": "^2.0.0",

    "morgan": "^1.10.1",

    "multer": "^2.0.2",

    "node-fetch": "^3.3.2",

    "passport": "^0.7.0",

    "passport-apple": "^2.0.2",

    "passport-azure-ad": "^4.3.5",

    "passport-google-oauth20": "^2.0.0",

    "prisma": "^6.11.1",

    "ts-node": "^10.9.2",

    "winston": "^3.17.0",

    "zod": "^4.0.5"

  },

  "devDependencies": {

    "@types/compression": "^1.8.1",

    "@types/cors": "^2.8.19",

    "@types/dompurify": "^3.0.5",

    "@types/express": "^5.0.3",

    "@types/morgan": "^1.9.10",

    "@types/multer": "^2.0.0",

    "@types/node": "^24.0.13",

    "@types/passport": "^1.0.17",

    "@types/passport-azure-ad": "^4.3.6",

    "@types/passport-google-oauth20": "^2.0.16",

    "@types/validator": "^13.15.2",

    "@typescript-eslint/eslint-plugin": "^8.37.0",

    "@typescript-eslint/parser": "^8.37.0",

    "eslint": "^9.31.0",

    "eslint-config-prettier": "^10.1.8",

    "eslint-formatter-friendly": "^7.0.0",

    "eslint-plugin-prettier": "^5.5.3",

    "prettier": "^3.6.2",

    "ts-node-dev": "^2.0.0",

    "tsconfig-paths": "^4.2.0",

    "tsx": "^4.20.3",

    "typescript": "^5.8.3",

    "vitest": "^3.2.4"

  }

}

